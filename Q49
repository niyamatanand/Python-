print('Creating and Accessing Tuples:')
Tuple = (1, 2, 3, 4)
print(Tuple)
print('First Element:', Tuple[0])
print('Last Element:', Tuple[-1])

print('\nCreating and Accessing Nested Tuples:') 
nested_tuple = (1, (2, 3), 4)
print(nested_tuple)
print("Sub-tuple's first Element:", nested_tuple[1][0])

print("\nThis program is written by Niyamat. ")
